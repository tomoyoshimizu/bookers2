<section>
  <h2><%= form_title %></h2>
  <div class="card">
    <div class="card-body">
      <div class="form-body">
        <% if form_value.errors.any? %>
          <div class="alert alert-danger" role="alert">
            <p class="alert-heading"><%= form_value.errors.count %> errors prohibited this obj from being saved:</p>
            <hr>
            <ul>
            <% form_value.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        <%= form_with model: form_value do |f| %>
          <div class="form-group">
            <%= f.label :name, class: 'font-weight-bold' %>
            <%= f.text_field :name, placeholder: '名前', class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :profile_image, class: 'font-weight-bold' %>
            <%= f.file_field :profile_image, placeholder: 'プロフィール画像', accept: 'image/*', class: 'form-control-file' %>
          </div>
          <div class="form-group">
            <%= f.label :introduction, class: 'font-weight-bold' %>
            <%= f.text_area :introduction, rows: '3', placeholder: '自己紹介文', class: 'form-control' %>
          </div>
          <hr>
          <%= f.submit submit_text, class: 'btn btn-lg btn-block btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</section>