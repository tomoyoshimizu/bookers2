<section class="mb-3">
  <h2>User info</h2>
  <div class="card">
    <div class="card-body">
      <%= image_tag user.get_profile_image(100,100), class: 'mb-3' %>
      <h3 class="h4 card-title font-weight-bold"><%= user.name %></h3>
      <p class="card-text"><%= user.introduction %></p>
    </div>
    <div class="card-footer">
      <%= link_to edit_user_path(user), class: 'btn btn-success btn-block' do %>
        <i class="fa-solid fa-user-gear"></i>
      <% end %>
    </div>
  </div>
</section>