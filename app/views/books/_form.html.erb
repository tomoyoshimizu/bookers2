<section>
  <h2><%= form_title %></h2>
  <div class="card">
    <div class="card-body">
      <div class="form-body">
        <% if form_value.errors.any? %>
          <div class="alert alert-danger" role="alert">
            <p class="alert-heading"><%= form_value.errors.count %> errors prohibited this obj from being saved:</p>
            <hr>
            <ul>
            <% form_value.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        <%= form_with model: form_value do |f| %>
          <div class="form-group">
            <%= f.label :title, class: 'font-weight-bold' %>
            <%= f.text_field :title, placeholder: "本のタイトル", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :body, class: 'font-weight-bold' %>
            <%= f.text_area :body, rows: "3", placeholder: "感想", class: "form-control" %>
          </div>
          <hr>
          <%= f.submit submit_text, class: "btn btn-block btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</section>
