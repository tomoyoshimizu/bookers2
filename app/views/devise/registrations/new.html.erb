<div class="row">
  <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto">
    <section>
      <h2>Sign up</h2>
      <div class="card">
        <div class="card-body">
          <div class="form-body">
            <%= form_with model: @user, url: user_registration_path do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="form-group">
              <%= f.label :name, class: 'font-weight-bold' %>
              <%= f.text_field :name, autofocus: true, placeholder: "ユーザー名", class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :email, class: 'font-weight-bold' %>
              <%= f.email_field :email, autocomplete: "email", placeholder: "メールアドレス", class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :password, class: 'font-weight-bold' %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード", class: "form-control" %>
            </div>
            <% if devise_mapping.rememberable? %>
            <div class="form-group">
              <%= f.label :password_confirmation, class: 'font-weight-bold' %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード（確認）", class: "form-control" %>
            </div>
            <% end %>
            <hr>
            <div class="actions">
              <%= f.submit "Sign up", class: "btn btn-lg btn-block btn-primary" %>
            </div>
          <% end %>
          </div>
        </div>
      </div>
    </section>
    <%= render "devise/shared/links" %>
  </div>
</div>