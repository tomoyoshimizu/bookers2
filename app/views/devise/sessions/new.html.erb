<div class="row">
  <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto">
    <section>
      <h2>Log in</h2>
      <div class="card">
        <div class="card-body">
          <div class="form-body">
          <%= form_with model: @user, url: user_session_path do |f| %>
            <div class="form-group">
              <%= f.label :name, class: 'font-weight-bold' %>
              <%= f.text_field :name, autofocus: true, placeholder: 'ユーザー名', class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :password, class: 'font-weight-bold' %>
              <%= f.password_field :password, autocomplete: 'current-password', placeholder: 'パスワード', class: 'form-control' %>
            </div>
            <% if devise_mapping.rememberable? %>
            <div class="form-group">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
            <% end %>
            <div class="actions">
              <%= f.submit 'Log in', class: 'btn btn-lg btn-block btn-primary' %>
            </div>
          <% end %>
          </div>
        </div>
      </div>
    </section>
    <%= render 'devise/shared/links' %>
  </div>
</div>
